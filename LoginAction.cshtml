@model VolumeBreakOut.Models.LoginM

@{
    ViewBag.Title = "LoginAction";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Resources/style.css" rel="stylesheet" type="text/css" />
    <title>LoginAction</title>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</head>
<body style="background-size: 100% 100%; background-image: url('/Images/download.jpg'); background-repeat: no-repeat; height: 100vh;">
    @using (Html.BeginForm("LoginAction", "Login", null, FormMethod.Post))
    {
        <div class="container">
            <div class="row" style="margin-top: 90px;">
                <div class="col-xs-12 col-sm-6  col-md-4 col-md-offset-4 col-sm-offset-3">
                    <div class="login-panel panel panel-default" style=" box-shadow: 5px 8px 8px 3px rgba(0, 0, 0, 0.36);">
                        <form id="form1" runat="server">
                            <div class="card-body">
                                <div class="text-center">
                                    <span class="card-img-top text-center">
                                        <img src="~/Images/logotn.png" style="margin-top:16px;" />
                                    </span>
                                    <h3 class="card-title text-center">Volume Break</h3>
                                </div>
                            </div>

                            <div style="padding:10px 30px" class="panel-body">
                                <div class="form-group">
                                    <!--  <asp:Label ID="lblName" runat="server" Text="Name"></asp:Label> -->

                                    <div class="form-horizontal">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-user"></span>
                                            </span>
                                            @Html.TextBoxFor(m => m.username, new { @class = "form-control", @placeholder = "Email address" })

                                        </div>
                                        @Html.ValidationMessageFor(m => m.username, "", new { @class = "help-block" })
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="form-horizontal">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-lock"></span>
                                            </span>
                                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })

                                        </div>
                                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "help-block" })
                                    </div>
                                </div>


                                <input ID="btnLogin" class="btn btn-block text-center btn-info" type="submit" value="Login" Style="padding:10px;" />



                            </div>
                        </form>
                        <br />
                        @*<div>
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-dismissible alert-danger">
                                        <button type="button" class="close" data-dismiss="alert">close</button>
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>*@
                    </div>

                </div>

            </div>

        </div>
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bootstrap/js/bootstrap.min.js"></script>

</body>
</html>